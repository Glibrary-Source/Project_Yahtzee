<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".view.main.FragmentRoomList">

    <FrameLayout
        android:id="@+id/frame_room_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rc_room_list">

        <TextView
            android:id="@+id/text_room_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/room_list_en"
            android:textColor="@color/white"
            android:textSize="64dp"
            android:layout_gravity="center"
            android:fontFamily="@font/pattaya"/>

        <ImageView
            android:id="@+id/btn_refresh"
            android:layout_gravity="bottom|end"
            android:src="@drawable/btn_reload"
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_room_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        android:padding="8dp"
        android:background="@drawable/default_profile_bg"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintVertical_weight="24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_room_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>