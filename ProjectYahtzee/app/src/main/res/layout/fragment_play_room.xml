<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:background="@color/colorPrimary"
    tools:context=".view.main.FragmentPlayRoom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        tools:context=".view.main.FragmentPlayRoom">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cs_play_room_player"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_play_room_player"
                android:src="@drawable/icon_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_play_room_current_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="24dp"
                android:text="turn"
                android:textColor="@color/white"
                android:fontFamily="@font/pattaya"
                app:layout_constraintStart_toEndOf="@id/img_play_room_player"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_play_room_player"
                app:layout_constraintBottom_toBottomOf="@id/img_play_room_player"/>

            <TextView
                android:id="@+id/text_play_room_current_turn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="24dp"
                android:text="turn: 1"
                android:textColor="@color/white"
                android:fontFamily="@font/pattaya"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_play_room_player"
                app:layout_constraintBottom_toBottomOf="@id/img_play_room_player"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_play_room_extend_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/img_play_room_player"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal">
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_play_room_total_score"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/default_profile_bg"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rc_play_room_extend_player"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cs_play_room_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/default_profile_bg"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="@id/cs_play_room_role_dice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cs_play_room_player">

            <include
                android:id="@+id/include_score_board"
                layout="@layout/score_board" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cs_play_room_role_dice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:background="@drawable/default_profile_bg"
            android:animateLayoutChanges="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cs_play_room_board">

            <ImageView
                android:id="@+id/img_play_dice_1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_dice_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_play_dice_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_play_dice_2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_dice_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_play_dice_3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_play_dice_1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_play_dice_3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_dice_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_play_dice_4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_play_dice_2"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_play_dice_4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_dice_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_play_dice_5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_play_dice_3"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/img_play_dice_5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_dice_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/img_play_dice_4"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_dice_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Roll"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cs_play_room_role_dice"/>

        <Button
            android:id="@+id/btn_play_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="play"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dice_roll"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>