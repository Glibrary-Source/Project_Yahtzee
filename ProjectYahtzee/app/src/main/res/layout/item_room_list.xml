<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cs_item_room_list"
    android:background="@drawable/default_btn_background"
    android:padding="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_room_list_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        tools:text="1."
        android:textColor="@color/white"
        android:fontFamily="@font/pattaya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/text_room_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="room_name"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pattaya"
        app:layout_constraintStart_toEndOf="@id/text_room_list_item_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/text_room_list_item_player_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4/4"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pattaya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>