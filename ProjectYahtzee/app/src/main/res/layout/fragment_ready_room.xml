<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="@color/colorPrimary"
    tools:context=".view.main.FragmentReadyRoom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_wait_room_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@drawable/default_btn_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <TextView
            android:id="@+id/text_wait_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hello my room"
            android:textSize="28dp"
            android:textColor="@color/white"
            style="@style/MyTextViewStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_wait_room_player_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player"
            android:textSize="14dp"
            android:textColor="@color/white"
            style="@style/MyTextViewStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_wait_room_name"/>

        <TextView
            android:id="@+id/text_wait_room_player_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/4"
            android:textSize="14dp"
            android:textColor="@color/white"
            style="@style/MyTextViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_wait_room_name"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_wait_room_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_wait_room_player_hint"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linear_btn_ready_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:baselineAligned="true"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cs_wait_room_frame">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/default_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/spinner_user_num">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_ready_en"
                style="@style/MyTextViewStyle"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="24dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/linear_btn_exit_room"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/default_profile_bg"
            app:layout_constraintTop_toBottomOf="@id/spinner_user_num">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_exit_room"
                style="@style/MyTextViewStyle"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="24dp"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_btn_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:background="@drawable/default_profile_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_btn_ready_room">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            style="@style/MyTextViewStyle"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"/>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>