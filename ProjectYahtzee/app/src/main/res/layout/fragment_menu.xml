<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".view.main.FragmentMenu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linear_create_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/default_btn_background"
            android:padding="8dp"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="start"
                app:lottie_rawRes="@raw/dice_roll_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/pattaya"
                android:layout_gravity="center"
                android:letterSpacing="0.1"
                android:maxLines="1"
                android:text="@string/fragment_menu_create_room"
                android:textColor="@color/white"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_room_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/default_btn_background"
            android:padding="8dp"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_create_room">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                app:lottie_rawRes="@raw/icon_list_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/pattaya"
                android:layout_gravity="center"
                android:letterSpacing="0.1"
                android:text="@string/fragment_menu_room_list"
                android:textColor="@color/white"
                android:textSize="32dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_my_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/default_btn_background"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_room_list">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="8dp"
                app:lottie_rawRes="@raw/icon_profile_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pattaya"
                android:text="@string/fragment_menu_my_profile"
                android:layout_marginStart="8dp"
                android:letterSpacing="0.1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="32dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>