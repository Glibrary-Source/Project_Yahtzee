        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/table_inside">

        <TextView
            android:id="@+id/text_score_board1_choice_name"
            style="@style/MyTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/table_inside"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="@string/play_board_choice"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:drawableStartCompat="@drawable/icon_dice_card_choice_adjust"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_score_board1_choice_point"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_score_board1_choice_point"
            style="@style/MyTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/table_inside"
            android:gravity="center"

            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_score_board1_choice_check"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toEndOf="@+id/text_score_board1_choice_name"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_score_board1_choice_check"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/table_inside"
            android:scaleType="centerInside"
            android:src="@drawable/icon_enter_adjust"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/text_score_board1_choice_point"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

